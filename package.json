{
  "name": "@sealsystems/http-server",
  "version": "3.1.2",
  "description": "@sealsystems/http-server serves an Express app. It accepts local HTTP connections and HTTPS-encrypted connections from any given external interface.",
  "author": {
    "name": "SEAL Systems AG",
    "email": "opensource@sealsystems.de",
    "url": "https://www.sealsystems.de"
  },
  "license": "MIT",
  "scripts": {
    "bot": "bot",
    "release": "semantic-release --branch ${CIRCLE_BRANCH}",
    "test": "npm run bot test-units",
    "coverage": "nyc --reporter=text --reporter=lcov mocha",
    "report": "npm run coverage && if [[ $OSTYPE == darwin* ]]; then open=open; else open=xdg-open; fi && $open coverage/lcov-report/index.html"
  },
  "main": "lib/httpServer.js",
  "dependencies": {
    "@sealsystems/consul": "4.0.1",
    "@sealsystems/log": "1.3.1",
    "@sealsystems/tlscert": "2.1.2",
    "getenv": "0.7.0",
    "lodash": "4.17.11"
  },
  "devDependencies": {
    "@sealsystems/eslint-config-es": "1.1.1",
    "assertthat": "2.0.0",
    "docker-host": "3.1.0",
    "express": "4.16.4",
    "freeport": "1.0.5",
    "nodeenv": "1.0.0",
    "nyc": "13.1.0",
    "proxyquire": "2.1.0",
    "roboter": "0.16.0",
    "roboter-server": "0.16.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sealsystems/node-http-server.git"
  },
  "release": {
    "extends": "@sealsystems/semantic-release-config/node-module"
  },
  "publishConfig": {
    "access": "public"
  }
}
